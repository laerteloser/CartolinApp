<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CartolinApp.LoginPage">    
    <StackLayout
        HorizontalOptions="Center"
        VerticalOptions="CenterAndExpand">        
        <Label Text="Cartolim - O Cartola do Xamarin" TextColor="Black" FontSize="Medium" HorizontalOptions="Center"/>
        <Button Command="{Binding LoginCommand}" Text="Logar com Facebook"
                BackgroundColor="Blue" FontSize="Medium" TextColor="White" />
    </StackLayout>
</ContentPage>